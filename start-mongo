sudo docker network create some-network
sudo docker run --network some-network --name some-mongo -v /media/ramdisk/mongodb:/data/db -p 27017:27017 -d mongo:4.4
sudo docker run --network some-network --name some-express -e ME_CONFIG_MONGODB_SERVER=some-mongo -p 8081:8081 mongo-express

sudo docker stop some-mongo
sudo docker rm some-mongo
sudo rm -rf /media/ramdisk/mongodb


sudo docker stop some-express
sudo docker rm some-express
